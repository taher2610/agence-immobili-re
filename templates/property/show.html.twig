{% extends 'base.html.twig' %}

{% block title property.title %}

{% block body %}
<div class="jumbotron">
<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
    <div class="col-md-8">
        {% if property.filename %}
            <img src="{{ vich_uploader_asset( property,'imageFile') | imagine_filter('medium') }}" alt="card-img-top" style="width: 100%; height:auto;">
        {% else %}
            <img src="{{ '/images/properties/empty.jpg' | imagine_filter('medium') }}" alt="card-img-top" style="width: 100%; height:auto;">
        {% endif %}
    </div>
    <div class="col-md-4">
    <h1>{{ property.title }}</h1>
    <h2>{{property.rooms }} pièces - {{ property.surface }} m</h2>
    <div class="text.primary" style="font-size: 4rem;font-weight: bold;">{{ property.formattedPrice }}</div>
    <a href="#" class="btn btn-primary">Contacter l'agence</a>
        <div id="contactForm" class="mt-4">
            {{ form_start(form) }}
            <div class="row">
                <div class="col">{{ form_row(form.firstname) }}</div>
                <div class="col">{{ form_row(form.lastname) }}</div>
            </div>
            <div class="row">
                <div class="col">{{ form_row(form.phone) }}</div>
                <div class="col">{{ form_row(form.email) }}</div>
            </div>
            {{ form_rest(form) }}
            <div class="form-group">
                <button class="btn btn-primary">Envoyer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>  
    </div>

      <div class="container mt -4">
    

<p>{{ property.description | nl2br }}</p>
<div class="row">
<div class="col-md-8">
<h2>Caractèristiques</h2>
<table class="table table-stripped">
<tr>
<td>Surface habitable</td>
<td>{{ property.surface }} m</td>
</tr>

<tr>
<td>Pièces</td>
<td>{{ property.surface }} m</td>
</tr>

<tr>
<td>Chambres</td>
<td>{{ property.bedrooms }} m</td>
</tr>

<tr>
<td>Etage</td>
<td>{{ property.floor }} m</td>
</tr>

<tr>
<td>Chauffage</td>
<td>{{ property.heatType }} m</td>
</tr>
</table>
        </div>
<div class="col-md-4">
<h2>Spécifications</h2>
    <ul class="List-group">
        {% for option in property.options %}
        <li class="list-group-item">{{ option.name }}</li>
        {% endfor %}

    </ul>
</div>
</div>
</div>
</div>
</div>
    {% endblock %}




